{
  "rules": {
    "feeds": {
      "public": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "players": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "purchases": {
      "$seller": {
        "$postId": {
          ".read": "auth != null && auth.uid === $seller",
          ".write": "auth != null"
        }
      }
    },
    "messages": {
      "$postId": {
        "$uid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null"
        }
      }
    }
  }
}
